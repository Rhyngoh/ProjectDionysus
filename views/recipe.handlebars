<div class="row">
    <div class="col s12">
      <h1>What</h1>
      <!--this row is for the search bar  -->
        <div class="card ">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src="{{this.recipe_image}}">
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">{{this.recipe_name}}<i class="material-icons right">toc</i></span>
            <p><a href="{{this.recipe_url}}">Recipe Page</a>
            <span class="addToCartBtn"><a class="waves-effect waves-light btn" id="{{this.id}}">Add to Cart</a></span>
            </p>
          </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">{{this.recipe_name}}<i class="material-icons right">close</i></span>
          {{this.instructions}}
          <p><a class="waves-effect waves-light btn" id="{{this.id}}">Add to Cart</a></p>
        </div>
      </div>
  </div>
</div>
