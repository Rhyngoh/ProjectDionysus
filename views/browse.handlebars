<div class="container">

<div class="row">
  <!--this row is for the search bar  -->
  <div class="input-field col s12">
    <i class="material-icons prefix">textsms</i>
    <input type="text" id="autocomplete-input" class="autocomplete">
    <label for="autocomplete-input">Autocomplete</label>
  </div>
</div>

<div class="row">
  {{#each recipes}}
  <div class="col m4 s12">
    <div class="card hoverable">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src="{{this.recipe_image}}">
      </div>
      <div class="card-content">
        <span class="card-title activator white-text text-darken-4">{{this.recipe_name}}<i class="material-icons right">toc</i></span>
        <p><a href="{{this.recipe_url}}">Recipe Page</a>
        <span class="addToCartBtn"><a class="waves-effect waves-light btn" id="{{this.id}}" data-recipe_name="{{this.recipe_name}}" data-id="{{this.id}}" data-ingredients="{{this.raw_ingredients}}">Add to List</a></span>
        </p>
      </div>
      <div class="card-reveal">
        <span class="card-title white-text text-darken-4">{{this.recipe_name}}<i class="material-icons right">close</i></span>
        <p>{{this.ingredients}}</p>
        <p><a class="waves-effect waves-light btn" id="{{this.id}}" data-recipe_name="{{this.recipe_name}}" data-id="{{this.id}}" data-ingredients="{{this.raw_ingredients}}">Add to List</a></p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
</div>